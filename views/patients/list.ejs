<h2>Patients List</h2>
<a href="/patients/add" class="btn btn-success mb-3">Add Patient</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% patients.forEach(patient => { %>
            <tr>
                <td><%= patient.id %></td>
                <td><%= patient.name %></td>
                <td><%= patient.age %></td>
                <td><%= patient.gender %></td>
                <td><%= patient.address %></td>
                <td>
                    <a href="/patients/edit/<%= patient.id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/patients/delete/<%= patient.id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
